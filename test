FROM go0v-vzdocker.oneartifactoryprod.verizon.com/ubuntu:latest


ENV http_proxy 'http://proxy.ebiz.verizon.com:80' 
ENV https_proxy 'http://proxy.ebiz.verizon.com:80' 
ENV no_proxy=.verizon.com,localhost

ENV ZAPPORT = 8000
ENV ZAPHOST = 0.0.0.0
ENV JAVA_HOME = /usr/lib/jvm/java-11-openjdk-amd64/

################################################################################3
# Set non-interactive frontend
ARG DEBIAN_FRONTEND=noninteractive

# Set timezone to EST
ENV TZ=EST

# Update package lists and install required packages
RUN apt-get update && apt-get install -y \
    nodejs \
    npm \
    curl \
    apt-utils \
    apt-transport-https \
    software-properties-common \
    g++ \
    vim \
    build-essential

# Install Node.js 16.x
RUN curl -sL https://deb.nodesource.com/setup_16.x | bash -
RUN apt-get install -y nodejs

# Install Google Chrome
RUN curl -fsSL https://dl-ssl.google.com/linux/linux_signing_key.pub | gpg --dearmor -o /usr/share/keyrings/google-chrome-archive-keyring.gpg
RUN echo "deb [arch=amd64 signed-by=/usr/share/keyrings/google-chrome-archive-keyring.gpg] https://dl.google.com/linux/chrome/deb/ stable main" | tee /etc/apt/sources.list.d/google-chrome.list
RUN apt-get update && apt-get -y install --no-install-recommends google-chrome-stable && apt-get clean && rm -rf /var/lib/apt/lists/* && rm -rf /etc/apt/sources.list.d/google-chrome.list

######################################################################
RUN apt-get update && \
	apt-get --no-install-recommends install -y curl apt-utils apt-transport-https software-properties-common 

ARG WDIO_CLI_VERSION=v8.8.8

RUN add-apt-repository ppa:openjdk-r/ppa -y && \
    apt-get update  && \ 
    apt install -y --no-install-recommends \
    g++ \
    wget jq \
    build-essential \
    gnupg ca-certificates icu-devtools \
    apt-transport-https \
    openjdk-11-jdk && \
    apt-get clean && \
	rm -rf /var/lib/apt/lists/*-y

RUN apt-get update && \
    apt install -y --no-install-recommends vim && \
    mkdir /apps && \
    mkdir /apps/data


# COPY ./test-data/26863.context /zap/context/26863.context
# COPY ./test-data/zap.config /zap/zap.config

COPY ZAP_2.11.1_Linux.tar.gz /apps/zap.tar.gz
COPY zapDependencies.tar.gz /apps/zapDependencies.tar.gz
COPY zapwrapper-2-10.jar /apps/zapwrapper.jar


RUN tar -xzvf /apps/zap.tar.gz -C /apps
# && rm /zap/ZAP_2.11.1_Linux.tar.gz
RUN tar -xzvf /apps/zapDependencies.tar.gz -C /apps
# && rm /zap/zapDependencies.tar.gz
RUN mv /apps/zapDependencies/* /apps/

#COPY DefaultVZ.policy /zap/policies/DefaultVZ.policy

#COPY sessioncookies.txt /zap/sessioncookies.txt
#COPY shortattacklist.txt /zap/shortattacklist

###########################################################################
# Create a directory for your project
RUN mkdir /tmp/webdriverio-test
WORKDIR /tmp/webdriverio-test

# Set npm registry and initialize the project
RUN npm config set https-proxy http://proxy.ebiz.verizon.com:80 && \
    npm config set http-proxy http://proxy.ebiz.verizon.com:80 && \
    npm config set registry http://registry.npmjs.org/
RUN npm init -y

# Install WebdriverIO CLI and any other dependencies
RUN npm install --save-dev @wdio/cli @wdio/sync
RUN npm i chromedriver --detect_chromedriver_version

# Generate Configuration File
RUN npx wdio config -y

# Copy over pre-configured wdio.conf.js
COPY wdio.conf.js wdio.conf.js
COPY wdio.conf.js /tmp/webdriverio-test/wdio.conf.js
###########################################################################

RUN npx wdio --bail 1 --loglevel error /tmp/webdriverio-test/wdio.conf.js
###########################################################################

WORKDIR /apps/

COPY job.sh /apps/
RUN chmod a+x job.sh

COPY expect_login.sh /apps/
RUN chmod a+x expect_login.sh

############################################################################

#unset Proxy
ENV http_proxy=
ENV https_proxy=
ENV no_proxy=

#Set ENV values
ENV LANDING_PAD=$LANDING_PAD
ENV http_proxy=$httpproxy
ENV https_proxy=$httpsproxy
ENV no_proxy=$noproxy
ENV quality_gate=$quality_gate

############################################################################
CMD ["bash", "/apps/job.sh"]

